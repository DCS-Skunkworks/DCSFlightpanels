        <GroupBox Header="Log"  FontSize="10"  Grid.Column="4" Grid.Row="1" Grid.RowSpan="1" Margin="0,0.5,0,-1">
            <TextBox Name="TextBoxLogTPM" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch" TextWrapping="Wrap" />
        </GroupBox>

    </Grid>
