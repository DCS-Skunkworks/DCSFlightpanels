<Window x:Class="DCSFlightpanels.InformationTextBlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Height="400" Width="600"  Icon="/DCSFlightpanels;component/Images/flightpanels02_8Rc_icon.ico" WindowStartupLocation="CenterScreen" Loaded="InformationWindow_OnLoaded">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Row="0" Height="319">
                <TextBlock Name="TextBlockInformation" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></TextBlock>
        </ScrollViewer>
        <Button Name="ButtonOk" Content="Ok" Height="23" Margin="0,0,10,0"  Grid.Row="1" HorizontalAlignment="Right" Width="50" Click="ButtonOkClick"></Button>
    </Grid>
</Window>
