                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Border" x:Key="BorderSelected">
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="LimeGreen"/>
        </Style>

